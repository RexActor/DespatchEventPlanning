<UserControl x:Class="DespatchEventPlanning.Views.PackingPlan"
            
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DespatchEventPlanning.Views"
             mc:Ignorable="d"  Width="1300" MaxWidth="1300">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200" Width="219*"/>
            <ColumnDefinition Width="46*"/>


        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" MinHeight="60"/>
                <RowDefinition Height="auto" MinHeight="60"/>
                <RowDefinition Height="auto" MinHeight="60"/>
                <RowDefinition Height="auto" MinHeight="60"/>
            </Grid.RowDefinitions>


        </Grid>

        <DataGrid x:Name="excelDataGrid" ScrollViewer.CanContentScroll="True" SelectionMode="Single" SelectionUnit="Cell" Grid.Column="0" HorizontalContentAlignment="Center" ColumnWidth="*" Height="auto" Width="auto" d:ItemsSource="{d:SampleData ItemCount=5}"  RenderTransformOrigin="0.5,0.5" Margin="0,36,10,30"/>
        <!--#region  Packing Date Calendar-->
        <Grid Grid.Column="1" Margin="10,14,-10,-14">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border BorderThickness="2" BorderBrush="Black" Grid.Row="0" Margin="10,10,10,10" Background="#62797f" >
                <Grid>
                    <Label Content="Packing Date" BorderBrush="DarkGreen" Background="LightBlue" HorizontalContentAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,225" Width="178" />
                    <Calendar x:Name="PackingDateCalendar" HorizontalAlignment="Center" Margin="0,42,0,54"  SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
                    <Button x:Name="ClearPackingDateButton" Content="Clear Packing Date" HorizontalAlignment="Center" Margin="0,218,0,10"  Width="178" IsTabStop="False" BorderBrush="#3b4043" BorderThickness="1" Background="#98a7ab" ClickMode="Press" Click="ClearPackingDateButton_Click" />
                </Grid>
            </Border>

            <!--#endregion-->
            <!--#region  Depot Date Calendar-->

            <Border  BorderThickness="2" BorderBrush="Black" Grid.Row="1" Margin="10,10,10,10" Background="#62797f" >
                <Grid Margin="0,0,0,-30">
                    <Label BorderBrush="DarkGreen" Background="LightBlue" BorderThickness="1" Content="Depot Date" HorizontalContentAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,255"  Width="178" />
                    <Calendar x:Name="DepotDateCalendar" HorizontalAlignment="Center" SelectedDatesChanged="Calendar_SelectedDatesChanged"   Margin="0,42,0,54"/>
                    <Button x:Name="ClearDepotDateButton" Content="Clear Depot Date" Height="35" HorizontalAlignment="Center" Margin="0,216,0,42" Width="178" IsTabStop="False" BorderBrush="#3b4043" BorderThickness="1" Background="#98a7ab" ClickMode="Press" Click="ClearDepotDateButton_Click"/>
                </Grid>
            </Border>
        </Grid>
        <!--#endregion-->


    </Grid>
</UserControl>
