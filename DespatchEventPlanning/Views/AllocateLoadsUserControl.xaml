<UserControl x:Class="DespatchEventPlanning.Views.AllocateLoadsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" Background="Green">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DataGrid x:Name="allocatedLoads" AutoGenerateColumns="False" Grid.Row="0">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Storage Date" Binding="{Binding storageDate}" />
                <DataGridTextColumn Header="Depot Name" Binding="{Binding depotName}" />
                <DataGridTextColumn Header="Load Reference" Binding="{Binding loadReference}" />
                <DataGridTextColumn Header="Depot Date" Binding="{Binding depotDate}" />
                <DataGridTextColumn Header="Pallet Quantity" Binding="{Binding quantityPallets}" />
                <DataGridTextColumn Header="Case Quantity" Binding="{Binding quantityCases}" />
                <DataGridTextColumn Header="" />
                <DataGridTextColumn Header="" />
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="storageSummary" Grid.Row="1" AutoGenerateColumns="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Load Reference" Binding="{Binding loadReference}" />
                <DataGridTextColumn Header="Storage Date" Binding="{Binding storageDate}"/>
                <DataGridTextColumn Header="Depot Name" Binding="{Binding depotName}"/>
                
                <DataGridTextColumn Header="Depot Date" Binding="{Binding depotDate}"/>
                <DataGridTextColumn Header="Pallet Quantity" Binding="{Binding palletSummary}"/>
                <DataGridTextColumn Header="Total Cases" Binding="{Binding casesSummary}" />
                <DataGridTextColumn Header="" /> 
                <DataGridTextColumn Header="" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>