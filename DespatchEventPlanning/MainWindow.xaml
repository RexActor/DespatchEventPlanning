<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DespatchEventPlanning"
        xmlns:Database="clr-namespace:DespatchEventPlanning.Database" x:Class="DespatchEventPlanning.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow"  Width="1500" Height="960" MaxWidth="1980" MaxHeight="1080"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="250" MinWidth="200"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" MinHeight="60"/>
                <RowDefinition Height="auto" MinHeight="60"/>
                <RowDefinition Height="auto" MinHeight="60"/>
                <RowDefinition Height="auto" MinHeight="60"/>
            </Grid.RowDefinitions>
            <Button Content="Import Plan" HorizontalAlignment="Center"  VerticalAlignment="Center"  Width="140" Height="35"/>
            <Button Grid.Row="1" Content="Allocate Loads" HorizontalAlignment="Center"  VerticalAlignment="Center"  Width="140" Height="35"/>
            <Button Grid.Row="2" Content="Create Depot Splits" HorizontalAlignment="Center"  VerticalAlignment="Center"  Width="140" Height="35"/>
            <Button Grid.Row="3" x:Name="SaveDataButton" Content="Save Data" HorizontalAlignment="Center"  VerticalAlignment="Center"  Width="140" Height="35" Click="SaveDataButton_Click" />


        </Grid>
        <DataGrid x:Name="excelDataGrid" SelectionMode="Single" SelectionUnit="Cell" Grid.Column="1" HorizontalContentAlignment="Center" ColumnWidth="*" Height="auto" Width="auto" d:ItemsSource="{d:SampleData ItemCount=5}"  RenderTransformOrigin="0.5,0.5" Margin="0,36,225,30"/>
        <Calendar x:Name="PackingDateCalendar" Grid.Column="1" HorizontalAlignment="Left" Margin="1049,36,0,0" VerticalAlignment="Top" SelectedDatesChanged="PackingDateCalendar_SelectedDatesChanged"/>



    </Grid>
</Window>
